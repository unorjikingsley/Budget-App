<div class="login-pg">

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "login-reg" }) do |f| %>
    <div class="abs">
      <div class="actions">
        <a href="/" class="back">â¬…</a>
      </div>
      <h2 class="text">REGISTER</h2>
      <h4 class="not">Next</h4>      
    </div>

    <div class="field">
      <%= f.text_field :name,
                   autofocus: true,
                   autocomplete: "name",
                   placeholder: "Name",
                   class: "w-full" %>
    </div>

    <div class="field">
      <%= f.email_field :email,
                    autofocus: true,
                    autocomplete: "email",
                    placeholder: "Email",
                    class: "w-full" %>
    </div>

    <div class="field">
      <%= f.password_field :password,
                       autocomplete: "new-password",
                       placeholder: "Password",
                       class: "w-full" %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation,
                       autocomplete: "new-password",
                       placeholder: "Confirm password",
                       class: "w-full" %>
    </div>

    <div class="log-in">
      <%= f.submit "Register", class: "text" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
  <%= render "devise/shared/error_messages", resource: resource %>
</div>
